# Database Configuration
# Driver: 'sqlite' (default) or 'postgres'
DB_DRIVER=sqlite

# For SQLite: Path to the database file
# DB_DSN=database/registry.db
# Legacy support:
DB_PATH=database/registry.db

# For PostgreSQL: Connection string
# DB_DRIVER=pgx
# DB_DSN=postgres://exile:exile@localhost:5432/exile_master?sslmode=disable

# Read-Only Database Replica (Optional)
# Use this to offload heavy read queries to a replica
# READONLY_DB_DSN=postgres://exile:exile@localhost:5432/exile_read_replica?sslmode=disable

# Database Connection Pool Tuning
# Defaults are usually sufficient, but tune these for high-load environments.
# DB_MAX_OPEN_CONNS=25
# DB_MAX_IDLE_CONNS=25
# DB_CONN_MAX_LIFETIME=5m

# Dashboard Administrator Credentials
# Essential for logging into the dashboard. Change these from defaults!
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Two-Factor Authentication (TOTP)
# Base32 encoded secret key. Generate one using `gotp` or an online generator.
# If set, 2FA is required for login.
ADMIN_2FA_SECRET=JBSWY3DPEHPK3PXP

# Email Verification (SMTP)
# Required for the 3rd step of authentication (Email Code).
# If SMTP_HOST is not set, this step is skipped.
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_password
SMTP_FROM=no-reply@example.com

# Server Environment
# Set to 'true' to enable strict security checks (2FA enforcement, etc.)
PRODUCTION_MODE=false

# Server Binding
# Host interface to bind to. Default is 127.0.0.1. Use 0.0.0.0 for Docker.
SERVER_HOST=127.0.0.1

# API Key for Node Authentication (REQUIRED for secure Node-Master communication)
# Nodes must use this exact key in their X-API-Key header.
MASTER_API_KEY=your_very_secret_master_api_key_here

# API Key for Game Client Authentication
# Game clients must use this key in their X-Game-API-Key header to access player APIs.
GAME_API_KEY=your_game_client_api_key

# WebSocket Security
# Comma-separated list of allowed origins for WebSocket connections.
# Defaults to localhost if not set.
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8081

# Firebase Integration (Optional)
# Required for Firebase Auth and Remote Config features.
# FIREBASE_PROJECT_ID=your-firebase-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
