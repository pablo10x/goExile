# Development Configuration
# Set to enable web dashboard (DEV_MODE=1)
# Leave empty or unset for production mode
DEV_MODE=1

# Admin Credentials (development only)
# Used for dashboard login when DEV_MODE is enabled
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Database Configuration
# Path to SQLite database file
DB_PATH=registry.db

# Server Configuration
# HTTP port for the server
HTTP_PORT=8081

# Server Time-To-Live (seconds)
# How long a server is considered alive without a heartbeat
SERVER_TTL=60

# Cleanup Interval (seconds)
# How often to remove expired servers
CLEANUP_INTERVAL=30
