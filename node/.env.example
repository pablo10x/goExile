# Master Server Connection
# URL of the Master Server (Registry)
MASTER_URL=http://localhost:8081

# Node Identification
# Region identifier (e.g. US-East). Required if not enrolling dynamically.
REGION=US-East

# Authentication
# API Key for authenticating with the Master Server.
# Automatically populated after successful enrollment.
MASTER_API_KEY=

# Game Server Configuration
# Path to the game server binary relative to the install directory
GAME_BINARY_PATH=server.x86_64

# Directory where the game server binary is installed (source for instances)
GAME_INSTALL_DIR=./game_server

# Directory where game server instances will be spawned
INSTANCES_DIR=./instances

# Download Token (Optional)
# Token required if downloading game server files from a protected source
GAME_DOWNLOAD_TOKEN=

# Operational State
# Set to 'true' to prevent new instances from spawning (Maintenance Mode)
IS_DRAINING=false
